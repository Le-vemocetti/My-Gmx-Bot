{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2020", "DOM"],
    "outDir": "dist",
    "rootDir": "src",

    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "skipLibCheck": true,

    "types": ["node"],
    
    "baseUrl": ".",
    "paths": {
      "@abi/*": ["src/abi/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}



